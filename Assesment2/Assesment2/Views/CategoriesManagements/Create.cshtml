@model Assesment2.Models.CategoriesManagement

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CategoriesManagement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <select class="form-control" asp-for="Name" id="name" name="name">
                    <option value="Mobile">Mobile</option>
                    <option value="Tv">Tv</option>
                    <option value="Ac">Ac</option>
                    <option value="Oven">Oven</option>
                    <option value="Laptop">Laptop</option>
                </select>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input asp-for="Picture" class="form-control" id="picture" name="picture"/>
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" id="status" name="status"/>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" name="save" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts{ 

    <script>
        $(function () {
            $("#name").val(localStorage.getItem("Name"));
            $("#picture").val(localStorage.getItem("pic"));
            $("#status").val(localStorage.getItem("Status"));

            $("#name").blur(function () {
                localStorage.setItem("Name", $("#name").val());
            });

            $("#picture").blur(function () {
                localStorage.setItem("pic", $("#picture").val());
            });
            $("#name").blur(function () {
                localStorage.setItem("Status", $("#status").val()); 
            });
    });


</script>
    }